pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                sh """
					cd demo
					mvn clean compile
				"""
            }
        }
        stage('Test') {
            steps {
                sh """
					cd demo
					mvn test
				"""
            }
        }
        stage('Deploy') {
            steps {
                sh"""
					cd demo
					mvn package
				"""
            }
        }
		
		stage('Build Image') {
            steps {
                sh"""
					cd demo
					sudo su
					docker build -t demo1 .
				"""
            }
        }
    }
}