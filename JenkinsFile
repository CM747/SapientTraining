pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                sh """
					cd demo
					mvn clean compile
				"""
            }
        }
        stage('Test') {
            steps {
                sh """
					cd demo
					mvn test
				"""
            }
        }
        stage('Deploy') {
            steps {
                sh"""
					cd demo
					mvn package
				"""
            }
        }
		stage('Build Image') {
            steps {
                sh"""
					cd demo
					docker build -t demo-docker .
				"""
            }
        }
		stage('Tag Image') {
            steps {
                sh"""
					docker tag demo-docker:latest 109339778940.dkr.ecr.us-east-1.amazonaws.com/demorepo
				"""
            }
        }
		stage('Push Image') {
            steps {
                sh"""
					echo "" | sudo -S docker push 109339778940.dkr.ecr.us-east-1.amazonaws.com/demorepo
					
				"""
            }
        }
		
    }
}