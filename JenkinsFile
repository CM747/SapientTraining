pipeline {
    agent any

    stages {
		stage('Initialise') {
            steps {
				dir demo
            }
        }
        stage('Build') {
            steps {
                sh """
					
					mvn clean compile
				"""
            }
        }
        stage('Test') {
            steps {
                sh """
				
					mvn test
				"""
            }
        }
        stage('Deploy') {
            steps {
                sh"""
				
					mvn package
				"""
            }
        }
		
		stage('Build Image') {
            steps {
                sh"""
					
				    docker build -t demo1 .
				"""
            }
        }
    }
}